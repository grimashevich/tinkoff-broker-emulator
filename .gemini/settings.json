{
  "model": {
    "name": "gemini-2.5-pro",
    "maxSessionTurns": -1,
    "compressionThreshold": 0.6
  },
  "tools": {
    "autoAccept": false,
    "core": ["read_file", "write_file", "list_directory", "run_shell_command", "glob", "search_file_content", "replace"],
    "allowed": [
      "run_shell_command(./gradlew)",
      "run_shell_command(gradle)",
      "run_shell_command(git)",
      "run_shell_command(docker)",
      "run_shell_command(docker-compose)",
      "run_shell_command(curl)",
      "run_shell_command(cat)",
      "run_shell_command(mkdir)",
      "run_shell_command(rm)",
      "run_shell_command(mv)",
      "run_shell_command(cp)"
    ]
  },
  "context": {
    "fileName": ["GEMINI.md"],
    "includeDirectories": ["docs"],
    "discoveryMaxDirs": 300
  },
  "general": {
    "checkpointing": {
      "enabled": true
    }
  }
}
